{
  "name": "kilzi-bot",
  "version": "1.0.0",
  "description": "",
  "main": "bot.js",
  "scripts": {
    "test": "jest",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node bot.js",
    "herokuLogin": "heroku login",
    "herokuDeploy": "heroku git:remote -a kilzi-bot && git add . && git commit -am \"Deployed to Heroku!!\" && git push heroku master",
    "lint": "eslint  --max-warnings=0 .",
    "lint-fix": "npm run lint -- --fix"
  },
  "jest": {
    "collectCoverageFrom": [
      "messageHandler.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "author": "Doron Kilzi",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "node-telegram-bot-api": "^0.53.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6"
  }
}
